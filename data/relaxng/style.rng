<grammar xml:lang="en" ns="http://florence.sourceforge.net" xmlns:svg="http://www.w3.org/2000/svg" xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0" xmlns:xsd="http://www.w3.org/2001/XMLSchema-datatypes" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns="http://relaxng.org/ns/structure/1.0" datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
  <start>
    <ref name="style-element"/>
  </start>
  <define name="xmllang">
    <attribute name="xml:lang">
      <data type="language"/>
    </attribute>
  </define>
  <define name="xmlbase">
    <attribute name="xml:base"/>
  </define>
  <define name="style-element">
    <element name="style">
      <optional>
        <ref name="xmllang"/>
      </optional>
      <optional>
        <ref name="xmlbase"/>
      </optional>
      <ref name="shapes-element"/>
      <ref name="symbols-element"/>
      <optional>
        <ref name="sounds-element"/>
      </optional>
    </element>
  </define>
  <define name="shapes-element">
    <element name="shapes">
      <optional>
        <ref name="xmllang"/>
      </optional>
      <optional>
        <ref name="xmlbase"/>
      </optional>
      <oneOrMore>
        <ref name="shape-element"/>
      </oneOrMore>
    </element>
  </define>
  <define name="symbols-element">
    <element name="symbols">
      <optional>
        <ref name="xmllang"/>
      </optional>
      <optional>
        <ref name="xmlbase"/>
      </optional>
      <oneOrMore>
        <ref name="symbol-element"/>
      </oneOrMore>
    </element>
  </define>
  <define name="sounds-element">
    <element name="sounds">
      <optional>
        <ref name="xmllang"/>
      </optional>
      <optional>
        <ref name="xmlbase"/>
      </optional>
      <oneOrMore>
        <ref name="sound-element"/>
      </oneOrMore>
    </element>
  </define>
  <define name="shape-element">
    <element name="shape">
      <optional>
        <ref name="xmllang"/>
      </optional>
      <optional>
        <ref name="xmlbase"/>
      </optional>
      <element name="name">
        <data type="string"/>
      </element>
      <externalRef href="svg11.rng"/>
    </element>
  </define>
  <define name="symbol-element">
    <element name="symbol">
      <optional>
        <ref name="xmllang"/>
      </optional>
      <optional>
        <ref name="xmlbase"/>
      </optional>
      <choice>
        <element name="name">
          <data type="string"/>
        </element>
        <element name="type">
          <choice>
            <value>close</value>
            <value>reduce</value>
            <value>config</value>
            <value>move</value>
            <value>bigger</value>
            <value>smaller</value>
            <value>extend</value>
            <value>unextend</value>
          </choice>
        </element>
      </choice>
      <choice>
        <externalRef href="svg11.rng"/>
        <group>
          <element name="label">
            <data type="string"/>
          </element>
          <zeroOrMore>
            <element name="label">
              <ref name="xmllang"/>
              <data type="string"/>
            </element>
          </zeroOrMore>
        </group>
      </choice>
    </element>
  </define>
  <define name="sound-element">
    <element name="sound">
      <optional>
        <ref name="xmllang"/>
      </optional>
      <optional>
        <ref name="xmlbase"/>
      </optional>
      <attribute name="match">
        <data type="string"/>
      </attribute>
      <element name="press">
        <data type="string"/>
      </element>
      <element name="release">
        <data type="string"/>
      </element>
      <element name="hover">
        <data type="string"/>
      </element>
    </element>
  </define>
</grammar>
